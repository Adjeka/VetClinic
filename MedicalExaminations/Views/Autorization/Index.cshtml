@{
    ViewData["Title"] = "Авторизация";
}

@section style {
    <link rel="stylesheet" href="~/css/autorization.css" />
}

<img src="~/img/background.png">

<div class="autorization">
    <h1>Авторизация</h1>
    <form class="log-in" name="autorization" action="" method="post">
        <div class="inputs">
            <label>
                Логин
                <input type="text" name="login" placeholder="Почта или номер телефона" required>
            </label>
            <label>
                Пароль
                <input type="password" name="login" placeholder="Пароль" required>
            </label>
        </div>
        <button class="log-in-button" type="submit" name="log-in-button">Войти</button>
    </form>
</div>
