@model IEnumerable<MedicalExaminations.Models.Animal>

@{
    ViewData["Title"] = "Регистр животных";
}

@section style {
    <link href="~/lib/DataTables/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/registry.css" />
}

<nav>
    <a href="/Mainform/Index"><img src="~/img/home.png" alt="home"></a>
    <a href="#"><img src="~/img/report.png" alt="report"></a>
    <div class="registries">
        <button class="dropbtn">Реестры</button>
        <div class="dropdown-content">
            <a asp-action="Index" asp-controller="Organizations">Организации</a>
            <a asp-action="Index" asp-controller="Contracts">Муниципальные контракты</a>
        </div>
    </div>
    <a href="/Autorization/Index"><img src="~/img/exit.png" alt="exit"></a>
</nav>
<h1>Реестр животных</h1>
<div class="content">
    <div class="table">
        <table id="myTable" class="table table-not-bordered table-hover table-sm">
            <thead>
                <tr>
                    <th class="colId">Id</th>
                    <th>Регистрационный номер</th>
                    <th>Населённый пункт</th>
                    <th>Категория животного</th>
                    <th>Пол животного</th>
                    <th>Год рождения</th>
                    <th>Номер электронного чипа</th>
                    <th>Кличка животного</th>
                    <th>Фотографии</th>
                    <th>Особые приметы</th>
                    <th>Наличие признаков владельца</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="colId"></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="edit">
        <div class="buttons">
            <a asp-action="Create"><input type="button" value="Добавить" /></a>
            <form id="Delete" asp-action="Delete" method="post" asp-route-id="">
                <input type="submit" value="Удалить" onclick="return confirmDelete()" />
            </form>
            <a asp-action="Export"><input type="button" value="Экспорт" /></a>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/DataTables/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "scrollY": "450px",
                "scrollCollapse": true,
                "paging": true
            });
        });

        $("#myTable tbody tr").dblclick(function () {
            var row = $(this).closest("tr");
            var id = Number(row.find("td").eq(0).html());

            if (Number.isInteger(id) && id != 0)
                window.location.href = `/Organizations/Edit/${id}`;
        });

        $("#myTable tbody tr").click(function () {
            var row = $(this).closest("tr");
            $(this).addClass('selected').siblings().removeClass('selected');
            var id = row.find("td").eq(0).html();

            var $link = $('#Delete');
            var href = $link.attr('action').split('/');
            href[3] = id;
            $link.attr('action', href.join('/'));
        });

        function confirmDelete() {
            var id = Number($('.selected').find("td").eq(0).html());
            if (Number.isInteger(id) && id != 0) {
                if (confirm('Вы уверены, что хотите удалить?')) {
                    return true;
                }
                else
                    return false;
            }
            else return false;
        }
    </script>
}